<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:id="@+id/otp_frag"
    android:background="@drawable/whiteback"
    android:orientation="vertical"
    tools:context=".OTPFragement">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:fontFamily="@font/poppins"
        android:text="Step 2"

        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:text="Please enter 6 digits acces code to verify"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edt_otp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="20dp"

        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edt_border"
        android:fontFamily="@font/poppins"
        android:hint="Enter OTP"
        android:paddingLeft="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/otp_txt"
            android:layout_height="wrap_content"
            android:text="Please wait you will recieve your otp in just a second.."
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/forward_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_arrow_forward_black_24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/code_txt"
        android:fontFamily="@font/poppins"
        android:text="I don't have access code."
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    </LinearLayout>
</FrameLayout>